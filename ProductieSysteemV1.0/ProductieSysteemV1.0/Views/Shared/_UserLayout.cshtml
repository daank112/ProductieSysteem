<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
</head>
<body>


    <div id="wrapper">

        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        ProductieSysteem
                    </a>
                </li>
                <li>
                    
                    <p>Welkom: @User.Identity.Name.ToString()</p>
                </li>
                <li>
                    @Html.ActionLink("Dashboard", "Index", "Dashboard")
                </li>
                <li>
                    @if (User.IsInRole("Teler"))
                    {
                        @Html.ActionLink("Weekproductie opgeven", "Week", "Production")
                    }
                </li>
                <li>
                    @if (User.IsInRole("administrator") || User.IsInRole("veiling"))
                    {
                        @Html.ActionLink("Weekproductie inzien", "index", "Overview")
                    }
                    @if (User.IsInRole("Teler"))
                    {
                        //Hier moet de Id van de week bij
                        @Html.ActionLink("Weekproductie inzien", "index", "Overview")
                    }
                </li>
                <li>
                    @if (User.IsInRole("administrator") || User.IsInRole("veiling"))
                    {
                        @Html.ActionLink("Telers overzicht", "telers", "Overview")
                    }                    
                </li>
                <li>
                    @if (User.IsInRole("administrator") || User.IsInRole("veiling"))
                    {
                        @Html.ActionLink("Gebruiker toevoegen", "registreren", "Account")
                    }
                    
                </li>
                <li>
                    @Html.ActionLink("Contact", "contact", "Dashboard")
                </li>
                <li>
                    @Html.ActionLink("Uitloggen", "Logout", "Account")
                </li>


            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()

                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

</body>

</html>


